<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/ColWhite"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="60dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>


    <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Name"
            android:ems="10"
            android:id="@+id/ret_username"/>
    <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Ener Email"
            android:ems="10"
            android:id="@+id/ret_email"/>
    <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Ener Password"
            android:ems="10"
            android:id="@+id/retpassword"/>

    <LinearLayout
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:textAllCaps="false"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRCancel"/>
        <Button
                android:textAllCaps="false"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRegister"/>
    </LinearLayout>
    <TextView
            android:textSize="18sp"
            android:textColor="@color/color_link"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"
            android:text="Have Account!Login!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRegister"/>
</LinearLayout>